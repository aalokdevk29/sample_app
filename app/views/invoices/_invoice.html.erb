<tr class="invoices-table__item-tr" data-id="<%= invoice.id %>">
  <td class="invoices-table__item-td invoices-table__item-td--client-name"><%= invoice.client_name %></td>
  <td class="invoices-table__item-td"><%= number_to_currency invoice.amount %></td>
  <td class="invoices-table__item-td"><%= invoice.tax %></td>
  <td class="invoices-table__item-td"><%= number_to_currency invoice.total %></td>
  <td class="invoices-table__item-td invoices-table__item-td--actions">
    <%= link_to '', xhr_change_client_name_invoice_path(invoice), class: 'invoice-action invoice-action--edit-name', rel: 'modal:ajax-open', title: 'Change name' %>
    <%= link_to '', purchase_orders_path(invoice_id: invoice.id), method: :post, class: 'invoice-action invoice-action--new-purchase-order', title: 'Purchase Order' %>
    <%= link_to '', invoice_path(invoice), method: :delete, class: 'invoice-action invoice-action--delete', title: 'Delete invoice' %>
  </td>
</tr>
